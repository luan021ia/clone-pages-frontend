# CLONE PAGES Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=3001
NODE_ENV=development

# Security - REQUIRED IN PRODUCTION
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,https://yourdomain.com

# Default Admin User (optional)
# If not set, a secure random password will be generated
DEFAULT_ADMIN_EMAIL=admin@clonepages.com
DEFAULT_ADMIN_PASSWORD=your-secure-admin-password

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# Frontend Configuration
VITE_API_URL=http://localhost:3001/api/auth

# Security Headers
# Enable additional security headers in production
ENABLE_SECURITY_HEADERS=true